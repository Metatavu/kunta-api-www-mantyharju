nav.navbar.navbar-light.top-nav-container
  .container
    .row.hidden-sm-up
      .col-xs-6
        button.navbar-toggler.hidden-sm-up(type='button', data-toggle='collapse', data-target='#exCollapsingNavbar', aria-controls='exCollapsingNavbar', aria-expanded='false', aria-label='Toggle navigation')
          i.fa.fa-bars
      .col-xs-18.logo-container
        a(href="/")
          img.logo(src="/gfx/layout/mantyharju_logo_mobile.jpg")
    .collapse.navbar-toggleable-xs#exCollapsingNavbar  
      .row
        .col-md-7.logo-container.hidden-sm-down
          a(href="/")
            img.logo(src="/gfx/layout/mantyharju_logo_desktop.png")
        .col-xs-24.col-md-6
          .nav-search-container
            input(placeholder="Hae sivustolta")
            i.fa.fa-search(aria-hidden="true")
        .col-xs-24.col-md-11
          ul.nav.navbar-nav.nav-bar-secondary
            if menus['sisalto']
              each item in menus['sisalto'].items
                li.nav-item
                  a.nav-link(href=item.url)
                    = item.label
        .col-xs-24.hidden-sm-up
          ul.nav.navbar-nav.nav-bar-primary
            if menus['paavalikko']
              each item in menus['paavalikko'].items
                li.nav-item
                  a.nav-link(href=item.url)
                    = item.label 
  .container-fluid.no-gutters.navbar-primary-container.hidden-sm-down
    .container
      nav.navbar.navbar-light.row
        .col-xs-24.col-lg-14.no-gutter-left.primary-navbar
          ul.nav.navbar-nav.nav-bar-primary
            if menus['paavalikko']
              each item in menus['paavalikko'].items
                li.nav-item
                  a.nav-link(href=item.url)
                    = item.label 