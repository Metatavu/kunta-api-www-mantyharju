mixin footerTile(tile)
  a(href=tile.link,target="_blank")
    .footer-tile(data-lazy-bg-image=tile.imageSrc)
    if tile.contents
      .footer-tile-contents
        !=tile.contents
.container.no-gutters
  .row
    .col-md-12.col-xs-24.no-gutter-right
      +footerTile(tileMap['footer-1'])
    .col-md-12.col-xs-24
      +footerTile(tileMap['footer-2'])
footer.container-fluid.no-gutters
  .container
    .row
      .col-xs-24.col-lg-6
        !=fragmentMap['footer-1']
      .col-xs-24.col-lg-18
        .row
          .col-xs-24.col-lg-8
            ul.footer-nav
              if menus['footer-1']
                each item in menus['footer-1'].items
                  li.footer-nav-item
                    a.footer-nav-link(href=item.url)
                      = item.label
          .col-xs-24.col-lg-8
            ul.footer-nav
              if menus['footer-2']
                each item in menus['footer-2'].items
                  li.footer-nav-item
                    a.footer-nav-link(href=item.url)
                      = item.label
          .col-xs-24.col-lg-8
            ul.footer-nav
              if menus['footer-3']
