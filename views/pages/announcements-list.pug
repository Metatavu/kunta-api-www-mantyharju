extends ../layout/contents.pug

include ../includes/mixins.pug

block scripts
  script(defer="defer",type="text/javascript", src="//cdn.metatavu.io/libs/jquery-lazyload/1.9.7/jquery.lazyload.min.js")
  script(defer="defer",type="text/javascript", src="/js/news-list.js")

block styles
  link(rel="stylesheet", href="/css/contents-common.min.css")
  link(rel="stylesheet", href="/css/common-list.min.css")
  link(rel="stylesheet", href="/css/announcements-list.min.css")

block content      
  .container.page-container
    .row
      +breadcrumbs(breadcrumbs)
        
  .container.page-container
    .row
      .col-xs-24
        .page-content
          .col-xs-24
            .row
              h1 Ajankohtaista
          .col-xs-24.articles-container
            .row
              each announcement in announcements
                  .row.announcement-row
                    .col-xs-24.col-md-6.col-lg-3
                      .article-image-placeholder
                        h1
                          i.fa.fa-bullhorn
                    .col-xs-24.col-md-18.col-lg-21
                      .row
                        .col-xs-24
                          span.date
                            =announcement.shortDate
                          a.title(href='/kuulutukset/' + announcement.slug)
                            !=announcement.title
                      .row
                        .col-xs-24
                          !=announcement.shortContent
          if page !== undefined
            .col-xs-24.pages-container.no-gutters
              if page > 0
                a.page-prev(href="?page=" + (page - 1))
                  |Edellinen sivu
              else
                span.page-prev
                  |Edellinen sivu
              span.page-number
                |Sivu 
                =page + 1
              if !lastPage
                a.page-next(href="?page=" + (page + 1))
                  |Seuraava sivu
              else
                span.page-next
                  |Seuraava sivu